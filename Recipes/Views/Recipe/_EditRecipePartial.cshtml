@model EditRecipeBase
@{
}

<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text">Name</span>
    </div>
    <input asp-for="Name" class="form-control rounded-right col-3" value="@Model.Name" />
    <div class="w-100"></div>
    <span asp-validation-for="Name" class="text-danger "></span>
</div>

<div class="input-group mb-3">
    <div class="input-group-prepend ">
        <span class="input-group-text">Time to cook</span>
    </div>
    <input asp-for="TimeToCookHrs" value="@Model.TimeToCookHrs" placeholder="hrs" class="form-control col-1" />
    <input asp-for="TimeToCookMins" value="@Model.TimeToCookMins" placeholder="mins" class="form-control rounded-right col-1" />
    <div class="w-100"></div>
    <span asp-validation-for="TimeToCookHrs" class="text-danger col-12"></span>
    <span asp-validation-for="TimeToCookMins" class="text-danger col-12"></span>
</div>


<div class="form-check-inline">
    @if (Model.IsVegetarian)
    {
        <input asp-for="IsVegetarian" class="form-check-input" checked />
    }
    else
    {
        <input asp-for="IsVegetarian" class="form-check-input" />
    }
    <label asp-for="IsVegetarian" class="form-check-label"></label>
</div>

<div class="form-check-inline">
    @if (Model.IsVegan)
    {
        <input asp-for="IsVegan" class="form-check-input" checked />
    }
    else
    {
        <input asp-for="IsVegan" class="form-check-input" />
    }
    <label asp-for="IsVegan" class="form-check-label"></label>
</div>

<div class="form-group">
    <label asp-for="Method" class="col-form-label"></label>
    <textarea asp-for="Method" rows="10" class="form-control">@Model.Method</textarea>
</div>

<table class="table table-hover" id="ingridients">
    <thead class="thead-light">
        <tr>
            <th>Ingridient</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Ingridients.Count; i++)
        {
            var ingridient = Model.Ingridients[i]; //try to use it!
            <tr>
                <td>
                    <div class="form-group">
                        <input asp-for="Ingridients[i].Name" class="form-control" value="@Model.Ingridients[i].Name" />
                        <span asp-validation-for="Ingridients[i].Name"></span>
                    </div>
                </td>
                <td>
                    <input asp-for="Ingridients[i].Quantity" class="form-control" value="@Model.Ingridients[i].Quantity" />
                    <span asp-validation-for="Ingridients[i].Quantity"></span>
                </td>
                <td>
                    <input asp-for="Ingridients[i].Unit" value="@Model.Ingridients[i].Unit" />
                    <span asp-validation-for="Ingridients[i].Unit"></span>
                </td>
                <td>
                    <button type="button" class="btn btn-outline-danger btn-sm remove">Remove</button>
                </td>
            </tr>
        }
    </tbody>
</table>
